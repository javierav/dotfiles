# vim: ft=gitconfig

[alias]
  cad = !git commit --amend --date=now
  cadne = !git commit --amend --no-edit --date=now

[color]
  ui = true

[core]
  excludesfile = ~/.gitignore
  editor = vim -f

[fetch]
  prune = true

[gpg]
  program = /opt/homebrew/bin/gpg

[merge]
  tool = vimdiff

[pull]
  rebase = false

[push]
  default = current

[rebase]
  autostash = true
